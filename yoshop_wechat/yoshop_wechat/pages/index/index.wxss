/* 搜索框组件 */
@import "components/search/search.wxss";

/* banner组件 */
@import "components/banner/banner.wxss";
.nav {
  width: 100%;
  height: auto;
  background: #fff;
  padding: 0 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  font-size:12px;
  color:#666;
}

.nav_list1 {
  width: 19%;
  height: 100rpx;
  float: left;
  border: 1px solid red;
}

.nav_list {
  text-align: center;
  width: 25%;
  height: auto;
  display: inline-block;
  border-radius: 10rpx;
  line-height: 20rpx;
}

.nav_list_img {
  text-align: center;
  width: 80%;
  height: auto;
  display: inline-block;
}

.nav_view_img {
  width: 100%;
  height: auto;
  margin-top:20rpx;
  margin-bottom:10rpx;
}
.cont{
  display:flex;
  flex-direction: column;
  justify-content: center;
}