.slide-image {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    display: block;
    background: #fff;
}

.banner-box {
    height: 750rpx;
    border-bottom: 1rpx solid #e4e4e4;
}

.user-orderJtou {
    color: #999;
    font-size: 26rpx;
    position: absolute;
    top: 50%;
    margin-top: -9rpx;
}

.goods-fixed-icon text {
    color: #fff;
    font-size: 22rpx;
    text-align: center;
    display: block;
}
.shop{
    height:150rpx;
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top:25rpx;
    background-color:white;
}
.s_left{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-left:25rpx;
}
.s_detail{
    display:flex;
    flex-direction: column;
    margin-left:20rpx;
}
.s_right{
    margin-right:25rpx;
    color: #ff495e;
    border:1px solid #ff495e;
    border-radius: 10rpx;
    background: #fff;
    font-size:14px;
    padding:10rpx;
}
.group{
    display:flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top:20rpx;
    border-bottom:1px solid #f7f7f7;
}
.g_left{
    display:flex;
    flex-direction: row;
    align-items: center;
}
.g_left image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.g_right{
    padding:10rpx;
    background: red;
    color:white;
}
button::after {
    border: none;

}

button {
   background-color: #fff;

}
.share { 
    height: 80rpx;
    width: 80rpx;
    /* position: fixed; */
    /* bottom: 170rpx; */
    /* right: 30rpx; */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    background: rgba(0, 0, 0, .6);
    border-radius: 50%;
    /* z-index: 10; */
  } 
  .share image {
    height: 40rpx;
    width: 40rpx;
  }
  .share text {
    color: #fff;  
  }
  
  .share button {
    position: absolute;
    height: 120rpx;
    width: 120rpx;
    opacity: 0.1;
    z-index: 99;
  }
